@page "/EditableGrid"
@rendermode InteractiveWebAssembly
@using Kaizen.UI
@using Kaizen.Sample.Web.Client.Samples
@using Kaizen.Sample.Web.Client.Services
@inject SampleCodeService _sampleCodeService

<PageTitle>Editable Grid</PageTitle>

<Toaster />

<div class="page">
    <h2>Editable Grid</h2>
    <p>This example shows how to make grid rows editable with inline editing, validation, and delete functionality. Click the edit icon to modify any row, or the delete icon to remove it.</p>

    <div class="panel">
        <EditableGridSample />
    </div>

    <CodeSample Code="@_codeSample" />
</div>

@code {
    string _codeSample = string.Empty;

    protected override void OnInitialized()
    {
        _codeSample = _sampleCodeService.GetSampleCode("EditableGridSample");
    }
}
