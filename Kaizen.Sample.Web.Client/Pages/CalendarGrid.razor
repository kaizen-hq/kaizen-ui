@page "/CalendarGrid"
@using Kaizen.UI
@using Kaizen.Sample.Web.Client.Samples
@using Kaizen.Sample.Web.Client.Services
@inject SampleCodeService _sampleCodeService

<PageTitle>Calendar with Grid</PageTitle>

<div class="page">
    <h2>Calendar with Grid</h2>
    <p>This example shows how to integrate a Calendar component with a DataGrid to display appointments. Click on any date in the calendar to filter and view appointments for that specific day in the grid below.</p>

    <CalendarGridSample />

    <CodeSample Code="@_codeSample" />
</div>

@code {
    string _codeSample = string.Empty;

    protected override void OnInitialized()
    {
        _codeSample = _sampleCodeService.GetSampleCode("CalendarGridSample");
    }
}
