@page "/FlatGrid"
@using Kaizen.UI
@using Kaizen.Sample.Web.Client.Samples
@using Kaizen.Sample.Web.Client.Services
@inject SampleCodeService _sampleCodeService

<PageTitle>Basic Grid</PageTitle>

<div class="page">
    <h2>Basic Grid</h2>
    <p>This example demonstrates a simple flat DataGrid with sortable columns and pagination. Click on column headers to sort the data.</p>

    <FlatGridSample />

    <CodeSample Code="@_codeSample" />
</div>

@code {
    string _codeSample = string.Empty;

    protected override void OnInitialized()
    {
        _codeSample = _sampleCodeService.GetSampleCode("FlatGridSample");
    }
}
