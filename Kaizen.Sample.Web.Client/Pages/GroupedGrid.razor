@page "/GroupedGrid"
@using Kaizen.UI
@using Kaizen.Sample.Web.Client.Samples
@using Kaizen.Sample.Web.Client.Services
@inject SampleCodeService _sampleCodeService

<PageTitle>Grouped Grid</PageTitle>

<div class="page">
    <h2>Grouped Grid</h2>
    <p>This example demonstrates a DataGrid with items organized by category groups. Each group displays a collapsible header with an item count, and rows can be edited or deleted inline.</p>

    <GroupedGridSample />

    <CodeSample Code="@_codeSample" />
</div>

@code {
    string _codeSample = string.Empty;

    protected override void OnInitialized()
    {
        _codeSample = _sampleCodeService.GetSampleCode("GroupedGridSample");
    }
}